---
import Card from './Card.astro';

const features = [
  {
    title: 'Automação Inteligente',
    description: 'Automatize processos repetitivos e libere sua equipe para tarefas estratégicas',
    icon: '🤖'
  },
  {
    title: 'Análise Preditiva',
    description: 'Tome decisões baseadas em dados com nossa análise preditiva avançada',
    icon: '📊'
  },
  {
    title: 'Processamento de Linguagem Natural',
    description: 'Extraia insights valiosos de textos e documentos automaticamente',
    icon: '🔍'
  }
];
---

<section id="features" class="py-20 bg-gray-800/50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Recursos Poderosos</h2>
      <p class="text-gray-300">Tecnologias avançadas para impulsionar seu crescimento</p>
    </div>
    <div class="grid md:grid-cols-3 gap-8">
      {features.map(feature => (
        <Card>
          <div class="text-4xl mb-4">{feature.icon}</div>
          <h3 class="text-xl font-bold mb-2">{feature.title}</h3>
          <p class="text-gray-300">{feature.description}</p>
        </Card>
      ))}
    </div>
  </div>
</section>