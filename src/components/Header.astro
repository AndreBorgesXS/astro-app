---
import Button from './Button.astro';

let isMenuOpen = false;

const toggleMenu = () => {
  isMenuOpen = !isMenuOpen;
};
---

<header class="fixed w-full z-50 bg-gray-900/80 backdrop-blur-sm">
  <div class="container mx-auto px-4 py-4">
    <nav class="flex items-center justify-between">
      <div class="text-2xl font-bold bg-gradient-to-r from-blue-500 to-purple-600 bg-clip-text text-transparent">
        Kopecode
      </div>

      {/* Mobile Menu Button */}
      {/* Mobile Menu Button */}
      <button class="md:hidden" onclick={() => toggleMenu()}>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-300">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>

      {/* Desktop Menu (Hidden on mobile) */}
      <div class="hidden md:flex items-center gap-8">
        <a href="/recursos" class="text-gray-300 hover:text-white">Recursos</a>
        <a href="/servicos" class="text-gray-300 hover:text-white">Serviços</a>
        <a href="/depoimentos" class="text-gray-300 hover:text-white">Depoimentos</a>
        <a href="/agendar-demo"><Button variant="outline">Contato</Button></a>
      </div>

      {/* Mobile Menu (Hidden by default) */}
      {isMenuOpen && (
        <div class="md:hidden absolute top-16 left-0 w-full bg-gray-900/90 backdrop-blur-sm py-4">
          <div class="container mx-auto px-4 space-y-4">
            <a href="/recursos" class="block text-gray-300 hover:text-white" onclick={() => handleNavigation('/recursos')}>Recursos</a>
            <a href="/servicos" class="block text-gray-300 hover:text-white" onclick={() => handleNavigation('/servicos')}>Serviços</a>
            <a href="/depoimentos" class="block text-gray-300 hover:text-white" onclick={() => handleNavigation('/depoimentos')}>Depoimentos</a>
            <a href="/agendar-demo" class="block" onclick={() => handleNavigation('/agendar-demo')}><Button variant="outline">Contato</Button></a>
          </div>
        </div>
      )}
    </nav>
  </div>
</header>